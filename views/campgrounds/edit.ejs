<%- include("../partials/header") -%>

<div class="container" style="margin: 30px auto;">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align: center;">Edit <%= camp.name%></h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%= camp._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" value="<%= camp.name%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" value="<%= camp.image%>">                    
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description"><%= camp.description%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">submit</button>
                    </div>
                </form>     
                <a href="/campgrounds">Go Back</a>   
            </div>
        </div>
        
    </div>
</div>

<%- include("../partials/footer") -%>