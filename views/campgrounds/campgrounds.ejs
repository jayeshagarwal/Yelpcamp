<%- include("../partials/header") -%>

<main role="main" style="margin-top: 25px;">
    <div class="container">
        <section class="jumbotron text-center" style="background: #f8f9fa;">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p class="lead text-muted">View our handpicked campgrounds from all over the world.</p>
            
            <a href="/campgrounds/new" class="btn btn-primary my-2">Add New Campground</a>
            
        </div>
        </section>
    
        <div class="row">
          <%  camps.forEach((camp)=> { %>
                <div class="col-md-4 col-sm-6">
                    <div class="card mb-4 shadow-sm">
                    <!--<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>-->
                        <img src="<%=camp.image%>" class="card-img-top" style="width: 100%; height: 200px;"></img>
                        <div class="card-body">
                            <h5 class="card-title" style="text-align: center;"><%= camp.name%></h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/campgrounds/<%=camp._id%>" class="btn btn-sm btn-outline-primary">More Info</a href="/campgrounds/<%=camp._id%>">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
         <%   });  %>
        </div>
    </div>
  </main>
  <style>
      img:hover {
          opacity: .5;
      }
  </style>
<%- include("../partials/footer") -%>